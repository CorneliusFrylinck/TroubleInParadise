@using Microsoft.AspNetCore.Identity
@using TroubleInParadise.Data

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "Admin"))
{
    <li class="nav-item dropdown show">
        <a class="dropdown-toggle nav-link text-dark" href="#" data-toggle="dropdown">Admin</a>
        <div class="dropdown-menu">
            <a class="dropdown-item nav-link text-dark" asp-area="Admin" asp-controller="Servers" asp-action="Index">Servers</a>
            <a class="dropdown-item nav-link text-dark" asp-area="Admin" asp-controller="Resources" asp-action="Index">Resources</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item nav-link text-dark" asp-area="Admin" asp-controller="Buildings" asp-action="Index">Buildings</a>
            <a class="dropdown-item nav-link text-dark" asp-area="Admin" asp-controller="BuildingTypes" asp-action="Index">Building Types</a>
            <a class="dropdown-item nav-link text-dark" asp-area="Admin" asp-controller="BuildingUpgrades" asp-action="Index">Building Upgrades</a>
        </div>
    </li>
}else if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "Admin"))
{
    <li class="nav-item dropdown show">
        <a class="dropdown-toggle nav-link text-dark" href="#" data-bs-toggle="dropdown">Admin</a>
        <div class="dropdown-menu">
            <a class="dropdown-item nav-link text-dark" asp-area="User" asp-controller="Players" asp-action="Index">Player Accounts</a>
        </div>
    </li>
}
else if(!SignInManager.IsSignedIn(User))
{
}