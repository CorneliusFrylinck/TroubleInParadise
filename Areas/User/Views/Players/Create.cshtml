@model TroubleInParadise.Models.Player

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    
    var parms = new Dictionary<string, string>
                {
                    { "id", Model.Id.ToString() },
                    { "serverId", Model.ServerId.ToString() },
                    { "userId", Model.UserId.ToString() }
                };
}

<h1>Create</h1>

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form  asp-area="User" asp-controller="Players" asp-action="Create" asp-all-route-data="parms">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-editor-for asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ServerId" class="form-control" />
                <span asp-validation-for="ServerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Last_Seen" class="form-control" />
                <span asp-validation-for="Last_Seen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Last_Updated" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Created" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="User" asp-controller="Servers" asp-action="Index" asp-route-id="@User.Identity.Name">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
